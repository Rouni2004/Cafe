@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var bgImage = Model.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("hintergrundbild");
    var reservierungsSeite = Model.Value<Umbraco.Cms.Core.Models.PublishedContent.IPublishedContent>("reservierungslink");
    var reservierungsUrl = reservierungsSeite?.Url() ?? "#";
    var pageTitle = Model.Value<string>("seitentitel") ?? "Willkommen im Campus Café";
}
<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <title>@pageTitle</title>
  <style>
    body { font-family: sans-serif; margin:0; background:#f4f4f4; }
    .hero { background-image:url('@(bgImage?.Url() ?? "")'); background-size:cover; background-position:center; height:70vh; color:#fff; display:flex; align-items:center; justify-content:center; }
    .hero h1 { background:rgba(0,0,0,.5); padding:1rem 2rem; border-radius:10px; }
    .cta { text-align:center; margin:2rem; }
    .cta a { display:inline-block; padding:1rem 2rem; background:#222; color:#fff; text-decoration:none; border-radius:5px; }
  </style>
</head>
<body>
  <div class="hero"><h1>@pageTitle</h1></div>
  <div class="cta"><a href="@reservierungsUrl">Jetzt Tisch reservieren</a></div>
</body>
</html>
